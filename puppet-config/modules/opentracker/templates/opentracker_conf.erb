<%
  trackers = @tracker_nodes
  listen_ip_addresses = @_listen_ip_addresses
  port = @port

  listen_ip_addresses.each do |ip_address| -%>
listen.tcp <%= ip_address %>:<%= port %>
<% end -%>
access.stats <%= @hostfile[@admin_node].to_s %>
livesync.cluster.listen <%= @hostfile[@hostname].to_s %>:9696
<% trackers.each do | tracker | -%>
livesync.cluster.node_ip <%= @hostfile[tracker].to_s %>
<% end -%>
tracker.rootdir <%= @config_dir %>
tracker.user nobody
