#!/bin/bash
#####################################################################
# Setup of variable from ::environment Puppet class
#####################################################################
# NOTE: This file is automatically generated by puppet.
# Changes to this file will be overwritten periodically by puppet!
#####################################################################
# TEMPLATE: {<%= @name %>}/<%= File.basename(__FILE__) %>}
#####################################################################

# Aliases
<%- @aliases.each do |key, value|
      if value.start_with?('\'') or value.start_with?('"')
        quoted_value = value
      else
        quoted_value = "'#{value}'"
      end
-%>
alias <%= key %>=<%= quoted_value %>
<%- end %>
