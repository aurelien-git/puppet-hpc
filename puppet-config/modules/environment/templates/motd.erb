<%- motd_info  = @motd_content['info'] -%>
<%- motd_legal = @motd_content['legal'] -%>
<%- info_separator  = "*".center(80, '*') -%>
<%- legal_separator = "=".center(80, '=') -%>
<%= info_separator %>
    <%- motd_info.each do | line | -%>
<%= '**'+line.center(76)+'**' %>
    <%- end -%>
<%= info_separator %>
    <%- motd_legal.each do | line | -%>
<%= line %>
    <%- end -%>
<%= legal_separator %>
