#####################################################################
# CTORRENT configuration file
#####################################################################
# NOTE: This file is automatically generated by puppet.
# Changes to this file will be overwritten periodically by puppet!
#####################################################################
# TEMPLATE: {<%= @name %>}/<%= File.basename(__FILE__) %>}
#####################################################################
<% torrentcfg = @ctorrent_options -%>
<% cllist = String.new -%>
DELAY=<%= torrentcfg["delay"] %>
MISC_OPTIONS="<%= torrentcfg["misc_options"] %>"
declare -A TORRFILE
declare -A SEEDFILE
<% torrentcfg["clusters"].each_key do |cluster| -%>
  <%-  torrentcfg["clusters"][cluster].each do |key,value | -%>
TORRFILE["<%= key %>"]='<%= value["torrent_file"] %>'
SEEDFILE["<%= key %>"]='<%= value["seeded_file"] %>'
<% cllist = cllist+key+" " -%>
  <%- end -%>
<% end -%>
CL_LIST="<%= cllist %>"
