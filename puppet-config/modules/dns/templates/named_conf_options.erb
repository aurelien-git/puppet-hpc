#####################################################################
# Bind DNS server configuration 
#####################################################################
# NOTE: This file is automatically generated by puppet.
# Changes to this file will be overwritten periodically by puppet!
#####################################################################
# TEMPLATE: {<%= @name %>}/<%= File.basename(__FILE__) %>}
#####################################################################
<% # Import Hash Table  -%>
<% dns_options = @main_config -%>
options {
        directory "<%= dns_options['directory'] -%>";
        forwarders { <%= dns_options['forwarders'].join('; ')-%>; };
        dnssec-validation <%= dns_options['dnssec-validation'] -%>;

        auth-nxdomain <%= dns_options['auth-nxdomain'] -%>;    # conform to RFC1035
        listen-on-v6 { <%= dns_options['listen-on-v6'] -%>; };
        listen-on { <%= dns_options['listen-on'].join('; ') -%>; };
};
