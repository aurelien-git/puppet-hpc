#####################################################################
# Icinga2 zones configuration
#####################################################################
# NOTE: This file is automatically generated by puppet.
# Changes to this file will be overwritten periodically by puppet!
#####################################################################
# TEMPLATE: {<%= @name %>}/<%= File.basename(__FILE__) %>}
#####################################################################
<% @endpoints.each do |name, params| -%>

object Endpoint "<%= name %>" {
<% if params.key?('host') -%>
  host = "<%= params['host'] %>"
<% end -%>
}
<% end -%>
<% @zones.each do |name, params| -%>

object Zone "<%= name %>" {
<% if params.key?('parent') -%>
  parent = "<%= params['parent'] %>"
<% end -%>
  endpoints = <%= params['endpoints']%>
}
<% end %>
object Zone "global-templates" {
  global = true
}
